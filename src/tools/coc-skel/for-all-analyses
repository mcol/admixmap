function usage() {
echo "Usage: $0 <config> <command> [ <options> ]"
exit "$1"
}

if [[ -z "$1" || -z "$2" ]]; then usage 1; fi

ANALYSES_CONF="$1"
shift

while read LINE
do
	# Skip comments
	if [[ "$(echo ${LINE} | head -c 1)" = "#" ]]; then continue; fi
	ANALYSIS_DIR="$(echo ${LINE} | cut -d: -f1)"
	pushd "../${ANALYSIS_DIR}" > /dev/null
	# echo -- "$@"
	"$@"
	popd > /dev/null
done < "${ANALYSES_CONF}"
